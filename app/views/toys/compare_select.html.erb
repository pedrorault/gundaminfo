<div class="columns pt-5">
  <div class="column is-5 is-offset-4 box">
    <%= form_tag comparacao_path, :method=> "get" do %>
      <div class="field has-addons ">
        <div class="select">    
          <% list = Toy.all.map { |toy| [toy.nome, toy.id] }%>
          <%= select_tag :item1,  options_for_select(list)%>
        </div>
        <h1 class="title ml-5 mr-5">VS</h1>
        <div class="select">
          <%= select_tag :item2,  options_for_select(list)%>
        </div>
      </div>
      <div class="control is-grouped">
        <%= link_to 'Voltar', toys_path, class: "button" %>
        <%= submit_tag("Comparar Modelos", :name => nil, class: "button is-link") %>
      </div>
    </div>
    <% end %>    
  </div>
</div>